{
  "scripts": {
    "build": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "start": "gunicorn park.wsgi:application -c gunicorn_config.py"
  },
  
  "version": 2,
  "builds": [
    {
      "src": "park/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "<projectname>/wsgi.py"
    }
  ]
}
